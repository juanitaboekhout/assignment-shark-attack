#3) Zijn aanvallen wanneer deze uitgedaagd zijn gevaarlijker
dangerous_attacks = attack_df.loc[attack_df['Injury'] == 'Fatal']     
dangerous_attacks[dangerous_attacks['Fatal (Y/N)'].str.contains("Y|y") == True]   
 
dangerous_attacks.dropna(subset = ['Fatal (Y/N)'], inplace = True)    
dangerous_attacks    

#twee dataframes maken
prov_attacks = attack_df[attack_df.Type == 'Provoked']
unprov_attacks = attack_df[attack_df.Type == 'Unprovoked']

prov_attacks.head()

unprov_attacks.head()

provfatal = len(prov_attacks[prov_attacks["Fatal (Y/N)"] == "Y"])
provnotfatal = len(prov_attacks[prov_attacks["Fatal (Y/N)"] == "N"])
unprovfatal = len(unprov_attacks[unprov_attacks["Fatal (Y/N)"] == "Y"])
unprovnotfatal = len(unprov_attacks[unprov_attacks["Fatal (Y/N)"] == "N"])

print(len('provfatal'))
print(len('provnotfatal'))

print(len('unprovfatal')) 
print(len('unprovnotfatal'))

#percentage provoked, fatal
#9 provfatal 
#12 provnottafal 
#21 totaal provoked

perc_prov_fatal = (9 / 21) * 100
perc_prov_fatal

#percentage unprovoked, fatal 
#11 unprovfatal 
#14 unprovnotfatal
#25 totaal unprovoked

perc_unprov_fatal = (11/25 *100)
perc_unprov_fatal

#Grafiek
fig, ax = plt.subplots()
perc_prov_fatal = (9/21) * 100
perc_unprov_fatal = (11/25 *100)
ax.bar([0, 1], [perc_prov_fatal, perc_unprov_fatal], color=["green", "red"])     
plt.xticks([0, 1], ["perc_prov_fatal", "perc_unprov_fatal"])                  
plt.title('Most dangerous attacks')
plt.xlabel('provoked / unprovoked')
plt.ylabel('count attacks')
plt.show() 

#conclusie vraag 3: 
#het percentage unprovoked en fataal is 44% en daarom net iets hoger dan provoked en fataal (42,86%), er zijn dus iets meer aanvallen die fataal aflopen die niet uitgedaagd zijn.
#Het antwoord op de vraag zijn aanvallen wanneer deze uitgedaagd zijn gevaarlijker is dus nee omdat er minder doden vallen onder deze doelgroep


#4) Leiden bepaalde activiteiten vaker tot aanvallen
attack_df['Activity'].value_counts().head()
activity_attack = attack_df.groupby('Activity')['Activity'].count().sort_values(ascending=False)[:15]

fig, ax = plt.subplots(figsize=(20,6))
ax.bar(activity_attack.index, activity_attack.values)
plt.title('activities that lead to shark attacks')
plt.xlabel('activity')
plt.ylabel('attack count')
plt.show()

#conclusie vraag 4: 
#de volgende activiteiten leiden vaker tot aanvallen: 1 = Surfen, 2 = zwemmen 3 = vissen.

